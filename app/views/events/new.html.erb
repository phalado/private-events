
<% if signed?%>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:event) do |f| %>
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control' %>
        <br>
        <%= f.submit "New event", class: "btn btn-primary" %>
      <% end %>
    </div>
<%else%>
    <h1 class="text-center"> Please Sign-in</h1>
  </div>
<%end%>