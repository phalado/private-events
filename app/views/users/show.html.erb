<div class="row">
  <div class="col-md-4">
    <h1>Welcome <%= @user.name %> </h1>
  </div>
  <div class="col-md-8">
    <% if @user.events.any? %>
      <h2>Events</h2>
      <ol>
        <% @user.events.each do |event| %>
          <li>
            <span>Event: <%= event.name %></span><br>
            <span>Date: <%= event.date %></span>
          </li>
        <% end %>
      </ol>
    <% end %>
  </div>
